?>
<style type="text/css">

</style>
<?php if($this->canShowBlock()): ?>
<div id="browseCategory" style="margin-bottom: 5px;">
	<div class="leftHeadingWrap"><?php echo $this->__('Refine Your Results') ?></div>
	<div class="leftWhiteBox">
	<div class="menu_list ">
	
    <?php echo $this->getStateHtml() ?>
    <?php if($this->canShowOptions()): ?>
            <!--<div class="cateuserInfo">
              <div class="elmRow"><strong><?php echo $this->__('Shopping Options') ?><strong></div>
			</div>-->
            <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
				<?php if($_filter->getName() == 'Category'): ?>
                    <p style="font-weight:bold; color:#9D0501; text-transform: uppercase; margin-bottom: 0; margin-left: 3px;">Cigar Brand</p>
				<?php else: ?>	
				    <p style="font-weight:bold; color:#9D0501; text-transform: uppercase; margin-bottom: 0; margin-left: 3px;"><?php echo $this->__($_filter->getName()) ?></p>
				<?php endif;?>
                    <?php if($_filter->getName() == 'Country Origin' or $_filter->getName() == 'Price' or $_filter->getName() == 'Strength' or $_filter->getName() == 'Tube' or $_filter->getName() == 'Cigar Type'): ?>
					<div class="menu_body" style="display:block;  padding-bottom: 1px;"><?php echo $_filter->getHtml() ?></div>
					<?php else: ?>
					  <?php if($_filter->getItemsCount() < 6): ?>
					  <div class="menu_body" style="display:block; padding-bottom: 1px;"><?php echo $_filter->getHtml() ?></div>
					  <?php else: ?>	
					<div id="text_scroll_nav">
					<div class="menu_body" style="display:block;"><?php echo $_filter->getHtml() ?></div>
					</div>
					<?php endif; ?>
					<?php endif; ?>
                <?php endif; ?>
                <?php endforeach; ?>
            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
    <?php endif; ?>
	</div>
	</div>
</div>
<?php endif; ?>
