<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="tabContainer"><?php echo $this->__('Customer Reviews') ?></div>

<?php if(Mage::helper('advancedreviews')->getSummaryBlockEnabled() && is_array($this->getSummaryBlock())):?>

    <?php foreach($this->getSummaryBlock() as $parametr):?>
        <?php if($parametr['votes_qty']>0):?>
        <table style="width:<?php echo round(100/count($this->getSummaryBlock()))?>%">
            <tr><th colspan="3"><?php echo $parametr['name']?></th></tr>
            <?php foreach($parametr['votes'] as $mark=>$qty):?>
                <tr>
                    <td class="star-name"><?php echo $mark;?> star :</td>
                    <td class="star-line"><div class="star-bar-container"><div class="star-bar" style="width:<?php echo $qty['percent'];?>%"><?php echo $qty['percent'];?>%</div></div></td>
                    <td class="star-count">( <?php echo $qty['qty'];?> )</td>
                </tr>
            <?php endforeach;?>
        </table>
        <?php endif;?>
    <?php endforeach;?>
    <div class="spacer"></div>
    <?php if($parametr['votes_qty']>0):?>
    <div class="advancedreviews-reviews-count">Total : <?php echo $parametr['votes_qty']?> Reviews</div>
    <?php endif;?>
<?php endif;?>



<div class="containerPost">
    <?php if (count($_items)):?>

        <?php echo $this->getChildHtml('toolbar') ?>

        <?php foreach ($_items as $_review):?>
            <dt>
                <a href="<?php echo $this->getReviewUrl($_review->getId()) ?>"><?php echo $this->htmlEscape($_review->getTitle()) ?></a> <?php echo $this->__('Review by <span>%s</span>', $this->htmlEscape($_review->getNickname())) ?>
            </dt>
            <dd>
                <?php $_votes = $_review->getRatingVotes(); ?>
                <?php if (count($_votes)): ?>
                <table class="ratings-table">
                    <col width="1" />
                    <col />
                    <tbody>
                        <?php foreach ($_votes as $_vote): ?>
                        <tr>
                            <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></th>
                            <td>
                                <div class="rating-box">
                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                </div>
                            </td>
                        </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>
                <?php endif; ?>
                <?php echo nl2br($this->htmlEscape($_review->getDetail())) ?>
                <small class="date"><?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></small><br />
    <div style="float:left; margin: 3px;">
        <a href="http://www.facebook.com/share.php?u=__URL__&amp;t=__TITLE__" target="_blank" style="text-decoration: none;">
            <img src="__IMAGEPATH__link-facebook.gif" alt="Facebook" title="Add to Facebook" height="16" width="16">
        </a>
<iframe allowtransparency="true" frameborder="0" scrolling="no" src="//platform.twitter.com/widgets/tweet_button.html" style="width:60px; height:20px;"></iframe>

    </div>
    <div>Share this review</div>
<br /><br />

            </dd>
        <?php endforeach; ?>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>
</div>